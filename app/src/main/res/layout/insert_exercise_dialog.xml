<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:id="@+id/cv_input">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15sp"
                android:id="@+id/ll_form_new_exercise">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_exercise"
                    android:id="@+id/text_label_input"
                    android:textSize="16sp"
                    android:textColor="@color/color_five"
                    android:labelFor="@+id/new_exercise_input"
                    android:layout_marginBottom="10dp"/>

<!--                <EditText-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/new_exercise_input"-->
<!--                    android:inputType="text"-->
<!--                    android:textColor="@color/color_five"-->
<!--                    android:importantForAutofill="no"/>-->

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/temp_array"
                    android:id="@+id/spinnerExercises"
                    android:backgroundTint="@color/color_five"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adicionar"
                    android:backgroundTint="@color/color_four"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/add_new_exercise"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>